<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartagencysoftware.bringmetolife.Choose">

    <info.hoang8f.widget.FButton
        android:id="@+id/loginAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fbutton:buttonColor="@color/MipeTheme.main.attribute"
        android:textColor="@color/abc_primary_text_material_dark"
        android:text=" Anonymously "
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <info.hoang8f.widget.FButton
        android:id="@+id/loginOther"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        fbutton:buttonColor="@color/MipeTheme.main.attribute"
        android:textColor="@color/abc_primary_text_material_dark"
        android:text= " login / sign up with Facebook or email  "
        android:layout_below="@+id/loginAn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
